<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
                <item name="android:windowNoTitle">true</item>
        
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomImageCardViewStyle" parent="Widget.Leanback.ImageCardViewStyle">
        <item name="cardBackground">#F0F</item>
        <item name="lbImageCardViewType">Title|Content</item>
    </style>
    <style name="CustomimageCardViewInfoAreaStyle" parent="Widget.Leanback.ImageCardView.InfoAreaStyle">
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
    </style>
    <style name="CustomrowHorizontalGridStyle" parent="Widget.Leanback.Row.HorizontalGridView">
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:horizontalSpacing">0dp</item>

    </style>

    <style name="CustomImageCardTheme" parent="Theme.Leanback">

        <!--控制item之间的间距等问题-->
        <!--<item name="rowHorizontalGridStyle">@style/CustomrowHorizontalGridStyle</item>-->



    </style>

</resources>
